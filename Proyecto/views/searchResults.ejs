<%- include('./partials/head') %>

<body>
	<!-- Header -->
<% if (locals.user != undefined) { %>
    <%- include('./partials/headerLogueado') %>
<% } else { %>
    <%- include('./partials/header') %>
<% } %>
<!-- /Header -->


	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<!-- Show the "ultimos" products -->
			<% if (Products.length > 0) { %>
				<div class="col-12">
					<h2 class="products-title TITULOS">Resultados de b√∫squeda: "<%= info %>"</h2>
				</div>
            <% for (let i = 0; i < Products.length; i++) { %> 
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/detail/<%= Products[i].id_producto %>">
							<figure class="product-box_image">
								<img src="<%= Products[i].foto_producto %>" alt="<%= Products[i].nombre %>">
							</figure>
							<article class="product-box_data">
								<h2 class="PRODUCTOS"><%= Products[i].nombre %></h2>
								<p class="DESCRIPCION"><%= Products[i].descripcion %></p>
								<p class="DESCRIPCION">Comentarios: <%= Products[i].comments.length %></p>
								<p class="DESCRIPCION">
								Cargado por: <br>
								<a href="/users/perfil/<%=Products[i].user.id_usuario%>"><%=Products[i].user.email%> </a>
								</p>
							</article>
						</a>
					</section>
				</div>
				<% } %>
				<% } else { %>
					<div class="col-12">
						<p class="products-title TITULOS">No se encontraron productos para "<%= info %>"</p>
					</div>
				<% } %>

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>