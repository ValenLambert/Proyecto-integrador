<%- include('./partials/head') %>

<!-- Header -->
<% if (locals.user != undefined) { %>
    <%- include('./partials/headerLogueado') %>
<% } else { %>
    <%- include('./partials/header') %>
<% } %>
<!-- /Header -->

<body>
    <!-- Banner -->
    <div class="banner">
        <img id="fotoBanner" src="images/banner.jpg" alt="Banner ">
    </div>
    <!-- /Banner -->

    <!-- Novedades -->
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <% if (User) { %>
                    <h2 class="products-title TITULOS"> ¡Hola, bienvenido/a  <%=User.email%>!</h2>
                <% } %>
                <h2 class="products-title TITULOS">Novedades</h2>
            </div>
             <!-- si esta logueado, mostrar boton de logout (todavia no igual ...)  -->
           

            <!-- Show the "ultimos" products -->
            <!-- FOR-->
            <% for (let i = 0; i < 4 && i < Products.length; i++) { %>
            <div class="col-12 col-sm-6 col-lg-3">
                <section class="product-box">
                    <a href="/product/detail/<%= Products[i].id_producto %>">
                        <figure class="product-box_image">
                            <!-- dejamos esta como fija -->
                            <img src="<%= Products[i].foto_producto %>" alt="<%= Products[i].nombre %>">
                        </figure>
                        <article class="product-box_data">
                            <h2 class="PRODUCTOS"><%= Products[i].nombre %></h2>
                            <p class="DESCRIPCION"><%= Products[i].descripcion %></p>
                            <!-- dejamos este comentario como fijo -->
                            <p class="DESCRIPCION">Comentarios: <%= Products[i].comments.length %></p>
                        </article>
                    </a>
                </section>
            </div>
            <% } %>
            <!-- FOR-->
        </div>
    </div>
    <!-- /Novedades -->
    <!-- Más comentados -->
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title TITULOS">Más comentados</h2>
            </div>
            <!-- Show the "ultimos" products--> <!--Aca aparecen todos los productos, de forma "manual", uno por uno-->
            <!-- FOR-->
            <% for (let i = 5; i < 9 && i < Products.length; i++) { %>
            <div class="col-12 col-sm-6 col-lg-3">
                <section class="product-box">
                    <a href="/product/detail/<%= Products[i].id_producto %>">
                        <figure class="product-box_image">
                            <!-- dejamos esta imagen como fija -->
                            <img src="<%= Products[i].foto_producto %>" alt="<%= Products[i].nombre %>">
                        </figure>
                        <article class="product-box_data">
                            <h2 class="PRODUCTOS"><%= Products[i].nombre %></h2>
                            <p class="DESCRIPCION"><%= Products[i].descripcion %></p>
                            <!-- dejamos este comentario como fijo -->
                            <p class="DESCRIPCION">Comentarios: <%= Products[i].comments.length %></p>
                        </article>
                    </a>
                </section>
            </div>
            <% } %>
            <!-- FOR-->
        </div>
    </div>
    <!-- /Más comentados -->

    <!-- footer -->
    <%- include('./partials/footer') %>
</body>
</html>

