<%- include('./partials/head') %>
<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title" id="editar" ><%= db.productos[1].producto %></h2> 
			<p class="product-detail-description TITULOS" id="editar"> 
				<a href="/product/add"> Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src = "<%= db.productos[1].imagen %>" alt="" class="product-detail-img">
					<p class="product-detail-description DESCRIPCION">
						<%= db.productos[1].descripcion %></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for (let i = 1; i <db.productos[1].comentarios.length; i++) { %>
							<article>
								<img src="<%=db.productos[1].comentarios[i].imagenPerfil%> " alt="">
								<div class="data">
									<p class="user">
									<strong> <a href="/users"></a> <%= db.productos[1].comentarios[i].usuario %> :</strong>
									<%= db.productos[1].comentarios[i].texto %>
									</div>
							</article>
							<% } %>
						
					</section>

					<form action="/product" method="GET"> 
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button ">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->

</body>	
</html>