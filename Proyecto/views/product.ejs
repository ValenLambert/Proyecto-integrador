<%- include('./partials/head') %>
<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= db.productos.producto %></h2> 
			<p class="product-detail-description">
				<a href="/product/add">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="images/products/img-cafetera-moulinex.jpg" alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%= db.productos[0].descrpicion %></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<article>
							<img src="https://via.placeholder.com/35" alt="">
							<div class="data">
								<p class="user">
								<strong> <a href="/users">Nombre usuario: </a> <%= db.productos[0].comentarios[0].usuario %></strong>
								<%= db.productos[0].comentarios[0].texto %>
								</div>
						</article>
						<article>
							<img src="https://via.placeholder.com/35" alt="">
							<div class="data">
								<p class="user">
									<strong> <a href="/users">Nombre usuario: </a> <%= db.productos[0].comentarios[1].usuario %></strong>
									<%= db.productos[0].comentarios[1].texto %>
								</p>
							</div>
						</article>

					</section>
					<form action="" method="GET"> 
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->

</body>	
</html>