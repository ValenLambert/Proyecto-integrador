<%- include('./partials/head') %>
	<!-- Header -->
<% if (locals.user != undefined) { %>
    <%- include('./partials/headerLogueado') %>
<% } else { %>
    <%- include('./partials/header') %>
<% } %>
<!-- /Header -->

<body>
	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= User.foto %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title USUARIO "> <%= User.email %>
						<% if (locals.user != undefined) { %>
							<a href="/users/edit/<%= User.id_usuario%>">
								<i class="fas fa-cog"></i>
								Editar perfil
							</a>
						<% } %>	
					</h1>
					<!-- CHEQUEAR SI HACE FALTA ESTE BOTON  <a class="btn mt-3 ml-4" href="">SEGUIR</a> -->
					
				</div>
				<div>
					<ul class="infoUsuario">
						<li><%= User.email %></li>
						<li> productos cargados: <%= User.products.lenght  %></li>
						<!-- esto chequear si es necesario:  -->
					    <!-- <li> seguidores: 200</li>
						<li> comentarios: 3</li> -->
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for( let i = 0; User.products.lenght ; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/detail/<%= product.id_producto %>">
							<figure class="product-box_image">
								<img src="images/products/raqueta.jpg" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data ">
								<h2 class="PRODUCTOS"><%= product.nombre %></h2>
								<p class="DESCRIPCION"><%= product.descripcion %></p>
								<p class="DESCRIPCION">  Comentarios: <%= comentarios.lenght %></p>
							</article>
						</a>
					</section>
				</div>
				<% } %>
	<!-- /Mis productos -->

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>