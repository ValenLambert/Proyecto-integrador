<%- include('./partials/head') %>
<body>
	<!-- Header -->
<% if (locals.user != undefined) { %>
    <%- include('./partials/headerLogueado') %>
<% } else { %>
    <%- include('./partials/header') %>
<% } %>
<!-- /Header -->


	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row PRODUCTOS">
			<div class="col-12">
				<h2 class="products-title TITULOS alignForms">Agregar productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12 PRODUCTOS alignForms"> 
				<form action="/product/store" method="post">

					<label class="label" for="imagen">Imagen:</label>
	 <!-- en el value del input preguntamos si existe oldData en locals, y si coincide con el name del input, si lo hace, asignar el valor a value, sino value quedara vacio  -->
					<input class="claseButton" type="file" name="imagen" accept="image/*" placeholder="url de la imagen" required value="<%= locals.oldData && oldData.imagen ? oldData.imagen : null %>"><br><br><br>
	<!-- aqui preguntamos si hay errores en locals, y si el error coincide con el name del input. si hay enviamos el error en un div con class="error-msg" -->
				<% if (locals.errors && errors.imagen  )  { %>
					<div class=""> <%= errors.imagen.msg  %> </div> 
					<% }   %>      
					</div>
					<label class="label" for="nombre">Nombre del Producto:</label>
	<!-- en el value del input preguntamos si existe oldData en locals, y si coincide con el name del input, si lo hace, asignar el valor a value, sino value quedara vacio  -->

					<input class="claseButton"  type="text" id="nombre" name="nombre" placeholder="nombre del producto" required value=" <%= locals.oldData && oldData.nombre ? oldData.nombre : null  %>"><br><br><br>
	<!-- preguntamos si hay errores en loclas y si los hay los enviamos  -->
					<% if (locals.errors && errors.nombre )  { %> 
						<div> <%= errors.nombre.msg  %>  </div>
						<% } %>

					<label class="label" for="descripcion">Descripci√≥n:</label><br>
	<!-- en el value del input preguntamos si existe oldData en locals, y si coincide con el name del input, si lo hace, asignar el valor a value, sino value quedara vacio  -->
					<input class="claseButton"  type="text" name="descripcion" placeholder="escriba una descripcion " required value=" <%= locals.oldData && oldData.descripcion ? oldData.descripcion : null %>"  ><br><br> 
	<!-- preguntamos si hay errores en loclas y si los hay los enviamos  -->
						<% if(locals.erros && errors.descripcion)  { %> 
							<div> <%= errors.descripcion.msg  %></div>
							<% } %>
					<button class="claseButton" id="agregarProducto" type="submit">Agregar Producto</button>
			</h2>
		</div>
	</div>  <br><br><br><br><br><br><br><br><br><br>

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>